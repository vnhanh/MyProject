<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_result_searched_video"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_preview_video"
        android:contentDescription="@string/content_desc_image_preview_video"
        android:layout_width="@dimen/size_image_preview_searched_video"
        android:layout_height="@dimen/size_image_preview_searched_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title_searched_video"
        android:textSize="@dimen/text_size_title_searched_video"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_preview_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin"/>

    <TextView
        android:id="@+id/tv_instructor_name"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_duration_searched_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_searched_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_duration"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_duration_searched_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_instructor_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_collection_desc"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_duration_searched_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_brand_name"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_duration_searched_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_collection_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/icon_checked"
        android:visibility="gone"
        android:contentDescription="@string/content_desc_icon_checked"
        app:srcCompat="@drawable/ic_check_black_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"/>

</android.support.constraint.ConstraintLayout>