<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <size android:height="4dp" android:width="4dp"/>
            <solid android:color="#a7a7a7"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress" android:gravity="center_vertical">
        <scale android:scaleWidth="100%" android:scaleHeight="50%">
            <shape android:shape="rectangle">
                <size android:height="4dp" android:width="4dp"/>
                <solid android:color="@color/colorPrimary"/>
            </shape>
        </scale>
    </item>
</layer-list>