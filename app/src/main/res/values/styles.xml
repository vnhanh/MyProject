<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextStyle_HelperItem" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title_helper_item</item>
        <item name="android:background">@drawable/bg_rectangle_white_border_black_corner</item>
    </style>
    
    <style name="TextStyle_Helper_Title1" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_helper_title1</item>
    </style>

    <style name="TextStyle_Helper_Title2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorGrayHelperTitle2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_helper_title2</item>
    </style>

    <style name="AppTheme.SeekBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PopupMenuCustom">
        <item name="android:textSize">@dimen/text_size_menu</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">#2196F3</item>
        <item name="android:divider">#ffffff</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
